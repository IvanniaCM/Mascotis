<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.ivannia.mascotis.DetalleMascota">


<LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="16dp"
    android:layout_margin="20dp"
    android:onClick="llamar">

    <include android:id="@+id/miActionBar"
        layout="@layout/actionbar">
    </include>

    <ImageView
        android:id="@+id/imgvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:textSize="@dimen/nombre_contacto"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/email_contacto"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_marginLeft="@dimen/margenIzq"/>

    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/telefono"
        android:textSize="@dimen/tel_contacto"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="26dp" />

</LinearLayout>
</android.support.constraint.ConstraintLayout>
